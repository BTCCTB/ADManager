{% extends '::layout.html.twig' %}

{% block body %}
    <h1>Password manager</h1>
    {% include ':partial:flash.html.twig' %}
    <div class="card" style="width: 20rem;">
        <h4 class="card-header">
            <i class="flag-icon flag-icon-{{ country|lower }}" title="{{ user.department }}" alt="{{ user.department }}"></i> {{ user.firstname }} {{ user.lastname }}
        </h4>
        <div class="card-body">
            <h5 class="card-title">My account</h5>
            <p class="card-text">
                {{ user.description }}<br>
                {{ user.userprincipalname }}
            </p>
            <div class="btn-group" role="group" aria-label="Actions">
                <a href="{{ url('homepage') }}" class="btn btn-primary"><i class="fa fa-sitemap"></i> My apps</a>
                <a href="{{ url('account_change_password') }}" class="btn btn-warning"><i class="fa fa-key"></i> Change password</a>
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
