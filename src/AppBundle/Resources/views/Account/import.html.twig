{% extends '::layout.html.twig' %}

{% block title %}
    Import BIS accounts - {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Active Directory - Import BIS accounts</h1>

    <div class="table-responsive">
        <table class="table table-striped table-sm table-hover">
            <thead>
            <tr>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Country</th>
                <th>Generated password</th>
                <th>Al ready exist</th>
                <th>Sync account</th>
                <th>Reset password</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.country }}</td>
                    <td>{{ user.password }}</td>
                    <td>
                        {% if user.exist %}
                            <span class="badge badge-success"><i class="fa fa-check-circle" aria-hidden="true"></i> YES</span>
                        {% else %}
                            <span class="badge badge-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> NO</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if user.sync %}
                            <span class="badge badge-success"><i class="fa fa-check-circle" aria-hidden="true"></i> YES</span>
                        {% else %}
                            <span class="badge badge-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> NO</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if user.reset %}
                            <span class="badge badge-success"><i class="fa fa-check-circle" aria-hidden="true"></i> YES</span>
                        {% else %}
                            <span class="badge badge-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> NO</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        <tfoot>
            <tr>
                <td colspan="8" class="text-right">{{ users|length }} user(s)</td>
            </tr>
        </tfoot>
        </table>
    </div>

{% endblock %}


