{% extends '::layout.html.twig' %}

{% block title %}
    Accounts - {{ parent() }}
{% endblock %}

{% block body %}
<h1>Active Directory - Accounts</h1>
<section class="row text-center placeholders">
    <div class="col6 col-sm-6 placeholder">
        <img src="data:image/gif;base64,R0lGODlhAQABAIABAAJ12AAAACwAAAAAAQABAAACAkQBADs=" width="200" height="200" class="img-fluid rounded-circle" alt="Generic placeholder thumbnail">
        <h4>Country's distribution</h4>
        <div class="text-muted">
            <table class="table table-striped table-sm table-hover">
                <thead>
                <tr>
                    <th>Country</th>
                    <th>Users</th>
                </tr>
                </thead>
                <tbody>
                {% for country,user in country_distribution %}
                    <tr>
                        <td>{{ country }}</td>
                        <td>{{ user }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>

    {% include ':partial:flash.html.twig' %}

<div class="table-responsive">
    <table class="table table-striped table-sm table-hover table-responsive">
        <thead>
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Country</th>
            <th>Windows account</th>
            <th>Function</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.Email }}</td>
                <td>{{ account.FirstName }}</td>
                <td>{{ account.LastName }}</td>
                <td>{{ account.Department }}</td>
                <td>{{ account.UserPrincipalName }}</td>
                <td>{{ account.Description }}</td>
                <td>{{ account.userAccountControl }}</td>

                <td>
                    {% if account.EmployeeID is not empty %}
                {% if account.isDisabled %}
                <a href="{{ path('ad_enable_account', {'employeeID': account.EmployeeID }) }}" class="btn btn-success"><i class="fa fa-check-circle" aria-hidden="true"></i> Enable</a>
                {% elseif account.isEnabled %}
                <a href="{{ path('ad_disable_account', {'employeeID': account.EmployeeID }) }}" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Disable</a>
                {% elseif account.isLocked == '66048' %}
                <a href="{{ path('ad_enable_account', {'employeeID': account.EmployeeID }) }}" class="btn btn-warning"><i class="fa fa-unlock" aria-hidden="true"></i> Unlock</a>
                {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

