{
    "name": "enabel/password",
    "description": "A php application for Active Directory Manipulation",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Damien Lagae",
            "email": "damienlagae@gmail.com"
        }
    ],
    "type": "project",
    "autoload": {
        "psr-4": {
            "AuthBundle\\": "src/AuthBundle",
            "BisBundle\\": "src/BisBundle",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "AuthBundle\\Tests\\": "tests/AuthBundle"
        }
    },
    "require": {
        "php": "^7.1",
        "adldap2/adldap2": "^9.0",
        "btc/flagicon-bundle": "^1.3",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^1.3",
        "doctrine/orm": "^2.5",
        "enabel/twb-crud-maker-bundle": "^1.0",
        "fzaninotto/faker": "^1.7",
        "guzzlehttp/psr7": "^1.4",
        "jms/i18n-routing-bundle": "^3.0",
        "jms/translation-bundle": "^1.4",
        "ocramius/proxy-manager": "2.1.*",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/httplug-bundle": "^1.11",
        "php-translation/loco-adapter": "^0.8.0",
        "php-translation/symfony-bundle": "^0.8.0",
        "sensio/framework-extra-bundle": "^5.0",
        "stof/doctrine-extensions-bundle": "^1.2",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "^4.0",
        "symfony/console": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/form": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/maker-bundle": "^1.2",
        "symfony/monolog-bundle": "^3.1.0",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/security-bundle": "^4.0",
        "symfony/security-csrf": "^4.0",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/templating": "^4.0",
        "symfony/translation": "^4.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/validator": "^4.0",
        "symfony/web-server-bundle": "^4.0",
        "symfony/yaml": "^4.0",
        "twig/twig": "^1.0||^2.0"
    },
    "require-dev": {
        "jakub-onderka/php-console-highlighter": "^0.3.2",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "phpmd/phpmd": "^2.6",
        "phpro/grumphp": "^0.13",
        "sensiolabs/security-checker": "^4.1",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/browser-kit": "^4.0",
        "symfony/css-selector": "^4.0",
        "symfony/phpunit-bridge": "^4.0"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "serve":[
            "docker-compose start",
            "bin/console server:run"
        ],
        "stop":[
            "docker-compose stop"
        ],
        "db-init":[
            "bin/console doctrine:database:drop --if-exists --force",
            "bin/console doctrine:database:create",
            "bin/console doctrine:migrations:migrate"
        ],
        "db-migrate":[
            "bin/console doctrine:migrations:migrate"
        ],
        "test":[
            "bin/phpunit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "config": {
        "process-timeout": 0,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        },
        "scripts-description":{
            "serve": "Start docker & internal php server",
            "stop": "Stop docker",
            "db-init": "Create database & schema",
            "db-migrate": "Execute the last doctrine migration",
            "test": "Execute the phpunit test"
        }
    }
}
