{
    "name": "enabel/password",
    "description": "A php application for Active Directory Manipulation",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Damien Lagae",
            "email": "damien.lagae@enabel.be"
        }
    ],
    "type": "project",
    "autoload": {
        "psr-4": {
            "AuthBundle\\": "src/AuthBundle",
            "BisBundle\\": "src/BisBundle",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "AuthBundle\\Tests\\": "tests/AuthBundle"
        }
    },
    "require": {
        "php": "^7.2",
        "adldap2/adldap2": "^10.0",
        "btc/flagicon-bundle": "^1.3",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "doctrine/orm": "^2.5",
        "fzaninotto/faker": "^1.7",
        "guzzlehttp/psr7": "^1.4",
        "jms/i18n-routing-bundle": "^3.0",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/httplug-bundle": "^1.14",
        "php-translation/loco-adapter": "^0.8",
        "php-translation/symfony-bundle": "^0.8",
        "sensio/framework-extra-bundle": "^5.0",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "4.2.*",
        "symfony/console": "4.2.*",
        "symfony/dotenv": "4.2.*",
        "symfony/flex": "^1.1",
        "symfony/form": "4.2.*",
        "symfony/framework-bundle": "4.2.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/security-bundle": "4.2.*",
        "symfony/security-csrf": "4.2.*",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/templating": "4.2.*",
        "symfony/translation": "4.2.*",
        "symfony/twig-bundle": "4.2.*",
        "symfony/validator": "4.2.*",
        "symfony/yaml": "4.2.*"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.5",
        "jakub-onderka/php-console-highlighter": "^0.4",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpmd/phpmd": "^2.6",
        "phpro/grumphp": "^0.15",
        "sebastian/phpcpd": "^4.1",
        "sensiolabs/security-checker": "^5.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/browser-kit": "^4.0",
        "symfony/css-selector": "^4.0",
        "symfony/maker-bundle": "^1.2",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "docker:build": [
            "docker-compose build"
        ],
        "docker:serve": [
            "docker-compose up -d"
        ],
        "docker:stop": [
            "docker-compose stop"
        ],
        "docker:cleanup": [
            "docker-compose rm"
        ],
        "db:init": [
            "docker-compose exec -T php bin/console doctrine:database:drop --if-exists --force",
            "docker-compose exec -T php bin/console doctrine:database:create",
            "docker-compose exec -T php bin/console doctrine:migrations:migrate"
        ],
        "db:migrate": [
            "docker-compose exec -T php bin/console doctrine:migrations:migrate"
        ],
        "db:diff": [
            "docker-compose exec -T php bin/console doctrine:migrations:diff"
        ],
        "docker:sf:console": [
            "docker-compose exec -T php bin/console -n"
        ]
    },
    "scripts-descriptions": {
        "docker:build": "Build the full stack [Apache/PHP/MariaDB/SSO/phpmyadmin/maildev] instance with docker",
        "docker:serve": "Start the full stack [Apache/PHP/MariaDB/SSO/phpmyadmin/maildev] instance with docker",
        "docker:stop": "Stop the full stack [Apache/PHP/MariaDB/SSO/phpmyadmin/maildev] instance with docker",
        "docker:cleanup": "Remove the full stack [Apache/PHP/MariaDB/SSO/phpmyadmin/maildev] instance with docker",
        "docker:sf:console": "Execute the bin/console from Symfony in the php docker instance",
        "db:init": "Initialize the database in the mariadb docker instance",
        "db:migrate": "Execute doctrine migrations in the mariadb docker instance",
        "db:diff": "Check the database schema & create migration if needed"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "config": {
        "process-timeout": 0,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "4.2.*"
        }
    }
}
