{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}Test user password{% endtrans %}</h1>
    <a href="{{ path('account_list') }}" class="btn btn-default"><i class="fa fa-chevron-left"></i> {% trans %}Back{% endtrans %}</a>
    {% include '_partial/flash.html.twig' %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="email">{% trans %}Email address{% endtrans %}</label>
                <input type="email" class="form-control" id="email" readonly="readonly" value="{{ account.email }}">
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            {{ form_row(form.password) }}
        </div>
        <div class="col-md-3">
            <div class="form-control-feedback">
                <span class="text-danger align-middle">
                    {{ form_errors(form.password) }}
                </span>
            </div>
        </div>
    </div>
    <div class="row" style="padding-top: 1rem">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> {% trans %}Test password{% endtrans %}</button>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block title %}
    {% trans %}Test user password{% endtrans %} - {{ parent() }}
{% endblock %}
