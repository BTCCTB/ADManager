{% extends 'layout.html.twig' %}

{% block title %}
    {% trans %}Accounts{% endtrans %} - {{ parent() }}
{% endblock %}

{% block body %}
<h1>{% trans %}User accounts{% endtrans %}</h1>
{% include '_partial/flash.html.twig' %}

<div class="table-responsive">
    <table class="table table-striped table-sm table-hover" id="account_list">
        <thead>
        <tr>
            <th>#</th>
            <th>{% trans %}Firstname{% endtrans %}</th>
            <th>{% trans %}Lastname{% endtrans %}</th>
            <th>{% trans %}Email{% endtrans %}</th>
            <th>{% trans %}Account name{% endtrans %}</th>
            <th>{% trans %}Initial password{% endtrans %}</th>
            <th class="text-right">{% trans %}Actions{% endtrans %} </th>
        </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.employeeId }}</td>
                <td>{{ account.firstname }}</td>
                <td>{{ account.lastname }}</td>
                <td>{{ account.email }}</td>
                <td>{{ account.accountName }}</td>
                <td>{{ account.generatedPassword | default('Not generated') }}</td>
                <td class="text-right">
                    {% if account.employeeId is not empty %}
                        <a href="{{ path('account_check_password', {'id': account.employeeId }) }}" class="btn btn-sm btn-outline-info"><i class="fa fa-medkit" aria-hidden="true"></i> {% trans %}Test password{% endtrans %}</a>
                        <a href="{{ path('account_reset_password', {'employeeID': account.employeeId }) }}" class="btn btn-sm btn-outline-warning"><i class="fa fa-redo-alt" aria-hidden="true"></i> {% trans %}Reset password{% endtrans %}</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.16/fh-3.1.3/r-2.2.1/datatables.min.css"/>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.16/fh-3.1.3/r-2.2.1/datatables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#account_list').DataTable({
                "pageLength": 25,
                fixedHeader: true,
                responsive: true,
                stateSave: true
            });
        });
    </script>
{% endblock %}