{% extends 'base.html.twig' %}

{% block title %}User language preferences{% endblock %}

{% block body %}
    <h1>User language preferences</h1>
    <form method="post" action="{{ path('user_language_delete', {'id': user_language.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_language.id) }}">
        <div class="btn-group">
            <a href="{{ path('user_language_index') }}" class="btn btn-sm btn-secondary"><i class="fa fa-chevron-left"></i> back to list</a>
            <a href="{{ path('user_language_edit', {'id': user_language.id}) }}" class="btn btn-sm btn-warning"><i class="fa fa-pencil"></i> edit</a>
            <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> delete</button>
        </div>
    </form>
    <hr>
    <table class="table">
        <tbody>
            <tr>
                <th>UserId</th>
                <td>{{ user_language.userId }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ user_language.language }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
