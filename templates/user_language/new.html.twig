{% extends 'base.html.twig' %}

{% block title %}{{ 'user.language.title.create'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'user.language.title.create'|trans }}</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="btn-group-sm">
                <a href="{{ path('user_language_index') }}" class="btn btn-secondary"> <i class="fa fa-chevron-left"></i> {{ 'user.language.btn.back'|trans }}</a>
            </div>
            <hr>
            {{ include('_partial/flash.html.twig') }}
            {{ include('user_language/_form.html.twig') }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/@ttskch/select2-bootstrap4-theme@1.3.2/dist/select2-bootstrap4.min.css">
{% endblock %}