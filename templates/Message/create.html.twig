{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'message.create.title'|trans }}</h1>
{% include '_partial/flash.html.twig' %}
    <div class="row">
        <div class="col-md-12">
            {% form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    {{ form_row(form.recipient) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    {{ form_row(form.multilanguage) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    {{ form_row(form.message) }}
                    {{ form_row(form.messageFr) }}
                    {{ form_row(form.messageNl) }}
                </div>
            </div>
            <div class="row" style="padding-top: 1rem">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-envelope"></i> {{ 'btn.message.label.send'|trans }}</button>
                </div>
            </div>
            {{ form_end(form)}}
        </div>
    </div>

{% endblock %}

{% block title %}
    {{ 'main.menu.message.create.label'|trans }} - {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2();
            // default: hide translation fields
            checkMultiLanguage();

            // If the multilanguage is checked, display translation fields
            $('.multi_check').on('change', checkMultiLanguage);

            function checkMultiLanguage(){
                if ( $('.multi_check').is(':checked')) {
                    $('.multi').parent().show();
                } else {
                    $('.multi').parent().hide();
                }
            }
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/@ttskch/select2-bootstrap4-theme@1.3.2/dist/select2-bootstrap4.min.css">
{% endblock %}
