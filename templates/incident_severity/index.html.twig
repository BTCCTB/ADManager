{% extends 'base.html.twig' %}

{% block title %}{{ 'Incident Severity' | trans }} - {{ parent() }}{% endblock %}

{% block body %}

    <h1>{{ 'Incident Severity' | trans }}</h1>

    <div class="btn-group" role="group" aria-label="Actions">
        <a  class="btn btn-outline-primary" href="{{ path('incident_severity_new') }}"><i class="fa fa-plus" aria-hidden="true"></i> {{ 'Create new' | trans }}</a>
    </div>

    <div class="table-responsive my-3">
        <table class="table table-bordered table-hover table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'Name' | trans }}</th>
                    <th>{{ 'Label' | trans }}</th>
                    <th class="text-right">{{ 'Actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for incidentSeverity in incidentSeverities %}
                <tr>
                    <td>{{ incidentSeverity.id }}</td>
                    <td>{{ incidentSeverity.name }}</td>
                    <td>{{ incidentSeverity.label }}</td>
                    <td class="text-right">
                        <div class="btn-toolbar" role="toolbar" aria-label="Actions toolbar">
                            <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                <a class="btn btn-outline-secondary" href="{{ path('incident_severity_show', {'id': incidentSeverity.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i> {{ 'Show' | trans }}</a>
                                <a class="btn btn-outline-warning"  href="{{ path('incident_severity_edit', {'id': incidentSeverity.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i> {{ 'Edit' | trans }}</a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ 'no records found' | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="6" class="text-right">{{ incidentSeverities|length }} {{ 'record(s)' | trans }}</td>
            </tr>
            </tfoot>
        </table>
    </div>


{% endblock %}