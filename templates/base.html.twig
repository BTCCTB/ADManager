<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Application for Active Directory Manipulation.">
        <meta name="author" content="Enabel">
        <title>
            {% block title %}Password manager{% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta.2/css/bootstrap.min.css" />
            <link rel="stylesheet" type="text/css" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/aller-webfont.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/btcflagicon/css/flag-icon.min.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}?a=0" />
        {% endblock %}
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicon/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="194x194" href="{{ asset('favicon/favicon-194x194.png') }}">
        <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('favicon/android-chrome-192x192.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('favicon/site.webmanifest') }}">
        <link rel="mask-icon" href="{{ asset('favicon/safari-pinned-tab.svg') }}" color="#ffc107">
        <link rel="shortcut icon" href="{{ asset('favicon/favicon.ico') }}">
        <meta name="apple-mobile-web-app-title" content="My apps">
        <meta name="application-name" content="My apps">
        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="msapplication-config" content="{{ asset('favicon/browserconfig.xml') }}">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
    {% block content %}
        {% include '_partial/navbar.html.twig' %}
        <div class="container-fluid">
        <div class="row">
            {% include '_partial/sidebar.html.twig' %}
            <main role="main" class="col-sm-10 ml-sm-auto col-md-11 pt-3">
                {% block body %}
                {% endblock %}
            </main>
            </div>
        </div>
    {% endblock %}
    <footer class="footer">
        <div class="container">
            <span class="text-muted love">Made with <i class="fa fa-heart"></i> in Belgium.</span>
        </div>
    </footer>
    {% block javascripts %}
        <!-- jQuery -->
        <script src="//code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <!-- Popper.js -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>
        <!--[if lt IE 9]>
        <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
        <!-- holder.js -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/holder/2.9.4/holder.min.js"></script>
        <!-- Timeago-->
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-timeago/1.6.3/jquery.timeago.min.js"></script>
        {% if app.request.locale == 'fr'  %}
        <script src="{{ asset('js/locales/jquery.timeago.fr.js') }}"></script>
        {% elseif app.request.locale == 'nl'  %}
        <script src="{{ asset('js/locales/jquery.timeago.nl.js') }}"></script>
        {% endif %}
        <script>
            jQuery(document).ready(function() {
                jQuery("time.timeago").timeago();
            });
        </script>
    {% endblock %}
    </body>
</html>
