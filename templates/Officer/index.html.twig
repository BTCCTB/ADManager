{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ 'officer.title.list'|trans }}</h2>
            <hr>
            {% include '_partial/flash.html.twig' %}
            <div class="filter d-flex justify-content-between align-items-center mb-3">
                <div class="justify-content-start">
                    <a href="{{ path('officer_new')}}" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus"></i> {{ 'action.label.create'|trans }}
                    </a>
                </div>
                <div class="justify-content-end">
                    {{ knp_pagination_filter(
                        pagination,
                        {
                            'global':'filter.criteria'
                        }
                    ) }}
                </div>
            </div>
            <div class="table-responsive">
                <div class="navigation d-flex justify-content-center align-items-center">
                    {{ knp_pagination_render(pagination) }}
                </div>
                <table class="table table-striped table-sm table-hover" id="account_list_page">
                    <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, '#', 'o.id') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'officer.list.label.firstname'|trans, 'u.firstname' )|raw }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'officer.list.label.lastname'|trans, 'u.lastname' )|raw }}</th>
                        <th>{{ 'officer.list.label.countries'|trans }}</th>
                        <th class="text-right">{{ 'officer.list.label.actions'|trans }} </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for officer in pagination %}
                        <tr>
                            <td>{{ officer.id }}</td>
                            <td>{{ officer.user.firstname }}</td>
                            <td>{{ officer.user.lastname }}</td>
                            <td>{{ officer.countriesName|join(', ') }}</td>
                            <td class="text-right">
                                <a href="{{ path('officer_show', {'id': officer.id }) }}" class="btn btn-sm btn-outline-success"><i class="fas fa-eye" aria-hidden="true"></i> {{ 'action.label.show'|trans }}</a>
                                <a href="{{ path('officer_edit', {'id': officer.id }) }}" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit" aria-hidden="true"></i> {{ 'action.label.edit'|trans }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation d-flex justify-content-center align-items-center">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}
    {{ 'main.menu.admin.officer.label'|trans }} - {{ parent() }}
{% endblock %}
