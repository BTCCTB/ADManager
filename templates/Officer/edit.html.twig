{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ 'officer.title.edit'|trans }}</h2>
            <div>
                <a href="{{ path('officer_index') }}" class="btn btn-outline-secondary"><i class="fas fa-chevron-left"></i> {{ 'Back'|trans }}</a>
                {{ include('Officer/_delete.html.twig') }}
            </div>
            <hr>
        </div>
    </div>
    {% include '_partial/flash.html.twig' %}
    {{ include('Officer/_form.html.twig') }}
{% endblock %}

{% block title %}
    {{ 'main.menu.officer.edit.label'|trans }} - {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/@ttskch/select2-bootstrap4-theme@1.3.2/dist/select2-bootstrap4.min.css">
{% endblock %}

