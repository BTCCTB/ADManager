<form method="post" action="{{ path('officer_delete', {'id': officer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline float-right">
    <button class="btn btn-outline-danger"><i class="fas fa-trash"></i> {{ 'form.btn.delete'|trans }}</button>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ officer.id) }}">
</form>
