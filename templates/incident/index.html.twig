{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Status pages & incident tracking</h1>
    {% include '_partial/flash.html.twig' %}
    {% if incidents is empty %}
        <div class="alert alert-success">
            <h4 class="alert-heading">{{ 'All Systems Operational'|trans }}</h4>
        </div>
    {% endif %}
    <div class="card card-default border-default">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <p class="data-block widget-block"></p>
                    <p style="font-size: 60px; line-height: 1; display: block; text-align: center;">0</p>
                    <p style="text-align: center;">{{ 'Active Incidents'|trans }}</p>
                    <p></p>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <p style="text-align: center;" class="data-block widget-block"></p>
                    <p style="font-size: 60px; line-height: 1; display: block; text-align: center;">0</p>
                    <p style="text-align: center;">{{ 'Active Maintenances'|trans }}</p>
                    <p></p>
                </div>
                <div class="col-sm-4 col-xs-12">
                    <p style="text-align: center;" class="data-block widget-block"></p>
                    <p style="font-size: 60px; line-height: 1; display: block; text-align: center;">176</p>
                    <p style="text-align: center;">{{ 'Days Since Last Incident'|trans }}</p>
                    <p></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {% for incident in incidents %}
        <div class="col-lg-12" style="padding: 1rem;">
                <div class="card text-center border-{{ incident.severity.label }} mb-3">
                    <h4 class="card-header text-{{ incident.severity.label }}">
                        {{ incident.title }}
                    </h4>
                    <div class="card-body text-left">
                        {{ incident.description }}
                    </div>
                    <div class="card-footer text-left">
                        Application(s) affected<br>
                        {% for application in incident.applications %}
                            <span class="badge badge-dark">{{ application.name }}</span>
                        {% endfor %}
                    {#<a href="#" class="text-success"><i class="fa fa-check-circle"></i> Online</a>#}
                    {#<a href="#" class="text-warning"><i class="fa fa-exclamation-circle"></i> Maintenance</a>#}
                    {#<a href="#" class="text-danger"><i class="fa fa-times-circle"></i> Offline</a>#}
                    </div>
                </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}

{% block title %}
    Incident - {{ parent() }}
{% endblock %}
