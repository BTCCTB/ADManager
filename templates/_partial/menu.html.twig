            <a href="{{ path('message_create_person') }}" class="dropdown-item {% if (app.request.get('_route') == 'message_create_person') %}active{% endif %}"><i class="fa fa-comment"></i> {{ 'main.menu.admin.message.create.person.label'|trans }}</a>
