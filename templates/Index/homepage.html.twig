{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    {% if starters is not empty %}
    <div class="col-lg-9 col-xs-12">
        {% else %}
        <div class="col-lg-12 col-xs-12">
            {% endif %}
            <div class="row">
                <div class="col-md-12">
                    {% include '_partial/flash.html.twig' %}
                    <h1>{{ 'main.menu.account.label'|trans }}</h1>
                    {%  if passwordAges > 80 %}
                    <div class="alert alert-danger" role="alert">
                        {%  elseif passwordAges > 70 %}
                        <div class="alert alert-warning" role="alert">
                            {%  else %}
                            <div class="alert alert-primary" role="alert">
                                {% endif %}
                                {{ 'my.account.label.lastset'|trans }}:
                                <time class="timeago" datetime="{{ user.passwordLastSetTimestamp|date("Y-m-d H:i:s") }}">{{ user.passwordLastSetTimestamp|date("d/m/Y") }}</time>
                                <br/><small>{{ 'my.account.label.password.recommendation'|trans }}</small>
                            </div>
                        </div>
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="card mb-3">

                                <div class="row no-gutters">
                                    <div class="col-md-4">
                                        <img src="{{ qrcode }}" alt="Add this to your signature" class="img-responsive" width="100%" style="max-width: 250px">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body text-left">
                                            <h4 class="card-title">
                                                {{ user.firstname }} {{ user.lastname }}
                                            </h4>
                                            <h5 class="card-title"><i>{{ user.description }}</i></h5>
                                            <hr>
                                            <p class="card-text">
                                                <i class="flag-icon flag-icon-{{ country|lower }}" title="{{ user.country }}" alt="{{ user.country }}"></i> {{ user.physicalDeliveryOfficeName }}
                                                <br>
                                                <i class="fas fa-building"></i> {{ user.company|default('N.C.') }}
                                                <br>
                                                <i class="fas fa-sitemap"></i> {{ user.department|default('N.C.') }}
                                            </p>
                                            <p class="card-text">
                                                <i class="fas fa-envelope" aria-hidden="true"></i> {{ user.userprincipalname }}
                                                {% if user.mobileNumber is not empty %}
                                                    <br>
                                                    <i class="fas fa-mobile" aria-hidden="true"></i> {{ user.mobileNumber }}
                                                {% elseif user.telephoneNumber is not empty %}
                                                    <br>
                                                    <i class="fas fa-phone" aria-hidden="true"></i> {{ user.telephoneNumber }}
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer links" aria-label="Actions">
                                    <a href="{{ url('account_change_password') }}" class="btn btn-warning"><i class="fas fa-key"></i> {{ 'btn.change.password.label'|trans }}</a>
                                    <a href="{{ url('contact_own_country') }}" class="btn btn-info"><i class="fas fa-phone"></i> {{ 'btn.contact.own.country.label'|trans }} <i class="flag-icon flag-icon-{{ app.user.username|userCountry|lower }}"></i></a>
                                    <a href="https://intranet.enabel.be" class="btn btn-primary" target="_blank"><i class="fas fa-info-circle"></i> {{ 'btn.intranet.label'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% if starters is not empty %}
                    <div class="col-lg-3 col-xs-12">
                        <div class="row">
                            <ul class="list-group col-lg-12">
                                <li class="list-group-item list-group-item-info"><i class="fas fa-users" aria-hidden="true"></i> {{ 'new_collegues.title.h3'|trans }}</li>
                                {% for collegue in starters %}
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <span>
                            {{ collegue.countryFlag|raw }} {{ collegue.displayName }}
                            <br>
                            <small>
                                {{ 'new_collegues.start_date'|trans }}: {{ collegue.DateContractStart|date('d/m/Y') }}<br>
                                <i class="fas fa-briefcase" aria-hidden="true"></i> {{ collegue.function }}
                            </small>
                        </span>
                                        <span>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('account_detail', {'id': collegue.employeeId }) }}" class="btn btn-outline-success btn-sm"><i class="fas fa-eye"></i> {{ 'Show detail'|trans }}</a>
                            {% endif %}
                        </span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% endif %}
            </div>
            {% endblock %}

            {% block title %}
            {{ 'main.menu.homepage.label'|trans }} - {{ parent() }}
{% endblock %}